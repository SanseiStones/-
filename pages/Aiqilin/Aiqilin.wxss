/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.navigator-hover {
    color:blue;
    background-color:  rgba(0, 0, 0, 0); 
}
p{
  display: block;
}
ul, menu, dir {
    display: block;
    list-style-type: disc;
    -webkit-margin-start: 0px;
    -webkit-margin-end: 0px;
}
li {
    display: list-item;
    text-align: -webkit-match-parent;
}

.my-img{
  width:11px;
  height:11px;
  padding-left:5px;
}
.weui-panel{
border-radius: 20px;
}
.weui-media-box{
  padding: 10px;
}
.weui-panel__hd {
  padding: 0;
  position: static;
}
.weui-cell::before {
border-top: none;
}
.img-text-background{
  width:100%;
height:2rem;
position:absolute;
background-color:black;
bottom:4.8rem;
opacity:0.5;
}